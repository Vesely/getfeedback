<!-- Default home page -->
<div class="landing-page">
	<div class="wrapper">
		<h1>Get feedback on your design. </h1>
		<form class="form" action="designs/addEmailToDesign" method="post" enctype="multipart/form-data">
			<div class="upload-section">
				<input type="file" name="design" id="uploadInput" class="hidden design-input" ng-file-select="onFileSelect($files)">
				<label class="upload-box" for="uploadInput">
					<img src="img/picture@2x.png" width="50" height="50" alt="Picutre icon">
					<span>Click here to upload.</span>
			</label>
			</div>
			<div class="form-modal hidden">
				<input type="hidden" name="src" class="design-src">
				<input type="email" name="email" class="form-control" placeholder="Write your e-mailâ€¦">
				<button type="submit" class="btn">
					<span>Continue &amp; get a link</span>
					<img src="img/arrow-right.svg" alt="Arrow right">
				</button>
			</div>
			<div class="progress"></div>
		</form>
	</div>
	<div class="background hidden">
		<div class="image">
			<img src="img/background.svg" alt="background">
		</div>
	</div>
	<div class="backgrounds">
		<div class="sky">
			<div class="birds">
				<img src="img/bg-birds.svg" alt="birds">
			</div>
			<div class="cloud">
				<img src="img/bg-cloud.svg" alt="cloud">
			</div>
			<div class="airship">
				<img src="img/bg-airship.svg" alt="airship">
			</div>
			<div class="cloud2">
				<img src="img/bg-cloud2.svg" alt="cloud">
			</div>
		</div>
		<div class="buildings">
			<img src="img/bg-buildings.svg" alt="background">
		</div> 
		<!-- <div class="image sky">
			<img src="img/bg-sky.svg" alt="background">
		</div>-->
	</div>
</div>


