<!-- Default home page -->
<div class="landing-page" ng-controller="HomepageCtrl">
	<div class="wrapper">
		<h1>Get feedback on your design.</h1>
		<form class="form" action="designs/addDesign" method="post" enctype="multipart/form-data">
			<div class="upload-section">
				<input type="file" name="design" id="uploadInput" class="hidden" ng-file-select="onFileSelect($files)">
				<label class="upload-box" for="uploadInput">
					<img src="img/picture.png" alt="Picutre icon">
					<span>Click here to upload.</span>
				</label>
			</div>
			<div class="form-modal">
				<input type="email" name="email" class="form-control" placeholder="Write your e-mailâ€¦">
				<button type="submit" class="btn">
					<span>Continue &amp; get a link</span>
					<img src="img/arrow-right.svg" alt="Arrow right">
				</button>
			</div>
			<div class="progress"></div>
		</form>
	</div>
	<div class="background">
		<div class="image">
			<img src="img/background.svg" alt="background">
		</div>
	</div>
</div>


